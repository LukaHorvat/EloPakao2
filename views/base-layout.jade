doctype html
html(lang="hr")
	head
		block head-dependencies
			link(href='//fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,latin-ext' rel='stylesheet' type='text/css')
			link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet")
			link(rel="stylesheet" href=path + "/css/bootstrap.css")
			link(rel="stylesheet" href=path + "/css/global.css")
			link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
			script(src="//code.jquery.com/jquery-1.10.1.min.js")
			script(src="//code.jquery.com/jquery-migrate-1.2.1.min.js")
			script(src=path + "/js/bootstrap.js")
			script!= "var path = \"" + path + "\";"  
			script(src=path + "/js/init.js")
	body
		block body-dependencies
		#centered-content
			#header
				include static/navbar
			#content
				block content
		#footer
			include static/footer