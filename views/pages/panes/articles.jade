h3 Articles
br
unless article
	.dropdown#article-list
		ul.dropdown-menu
			each article in articles
				li(role="presentation")
					a(role="menuitem" tabindex="-1" href=path + "/editarticle/" + article._id)= article.title
	br(clear="all")
	br
form(role="form" method="post" action=path + (article ? "/editarticle/" + article._id : "/addarticle"))
	.form-group
		label(for="article-title") Title
		input.form-control#article-title(type="text" placeholder="Enter title" name="article-title" value=article ? article.title : "")
	.form-group
		label(for="article-text") Content
		textarea.form-control#article-text(placeholder="Enter content" rows="20" name="article-text")
			if article 
				= article.text
	.form-group
		button.btn.btn-success(type="submit")= article ? "Edit" : "Add"