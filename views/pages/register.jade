extends ../base-layout

append head-dependencies
	script(src=path + "/js/color.js")
	script(src=path + "/js/register.js")

block content
	form(role="form" method="post" action=path + "/register")
		.form-group
			label(for="email") Email
			input.form-control(type="text" placeholder="Unesi email" name="email")
		.form-group
			label(for="password") Lozinka
			input.form-control(type="password" placeholder="Unesi lozinku" name="password")#original-password
		.form-group
			label(for="password") Ponovljena lozinka
			input.form-control(type="password" placeholder="Ponovi lozinku")#repeat-password
		.form-group
			button.btn.btn-success(type="submit") Prijavi